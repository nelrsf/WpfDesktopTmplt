<UserControl x:Class="iPlanner.Presentation.Controls.RibbonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
             xmlns:vm ="clr-namespace:iPlanner.Presentation.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">

    <ribbon:Ribbon Background="#FFF0F0F0">
        <Ribbon.ApplicationMenu>
            <RibbonApplicationMenu Visibility="Hidden" Width="0"/>
        </Ribbon.ApplicationMenu>


        <ribbon:RibbonTab Header="Inicio">

            <ribbon:RibbonGroup Header="Archivo" >
                <!-- Nuevo -->
                <ribbon:RibbonButton Click="NewButton_Click">
                    <ribbon:RibbonButton.LargeImageSource>
                        <StaticResource ResourceKey="IconNew"/>
                    </ribbon:RibbonButton.LargeImageSource>
                    <ribbon:RibbonButton.Label>Nuevo</ribbon:RibbonButton.Label>
                </ribbon:RibbonButton>

                <!-- Abrir -->
                <ribbon:RibbonButton Click="HomeButton_Click">
                    <ribbon:RibbonButton.LargeImageSource>
                        <StaticResource ResourceKey="home"/>
                    </ribbon:RibbonButton.LargeImageSource>
                    <ribbon:RibbonButton.Label>Inicio</ribbon:RibbonButton.Label>
                </ribbon:RibbonButton>
            </ribbon:RibbonGroup>
        </ribbon:RibbonTab>

        <ribbon:RibbonTab Header="Ver">
            <ribbon:RibbonGroup Header="Ventana">
                <!-- Panel Lateral -->
                <ribbon:RibbonButton x:Name="SidebarToggle" Click="ToggleSideBar">
                    <ribbon:RibbonButton.LargeImageSource>
                        <StaticResource ResourceKey="fileTree"/>
                    </ribbon:RibbonButton.LargeImageSource>
                    <ribbon:RibbonButton.Label>Panel Lateral</ribbon:RibbonButton.Label>
                </ribbon:RibbonButton>
            </ribbon:RibbonGroup>

            <ribbon:RibbonGroup Header="Vista">
                <!-- Botón Vertical -->
                <ribbon:RibbonButton Click="ArrangeVertical_Click">
                    <ribbon:RibbonButton.LargeImageSource>
                        <StaticResource ResourceKey="columns"/>
                    </ribbon:RibbonButton.LargeImageSource>
                    <ribbon:RibbonButton.Label>Vertical</ribbon:RibbonButton.Label>
                </ribbon:RibbonButton>

                <!-- Botón Horizontal -->
                <ribbon:RibbonButton Click="ArrangeHorizontal_Click">
                    <ribbon:RibbonButton.LargeImageSource>
                        <StaticResource ResourceKey="rows"/>
                    </ribbon:RibbonButton.LargeImageSource>
                    <ribbon:RibbonButton.Label>Horizontal</ribbon:RibbonButton.Label>
                </ribbon:RibbonButton>

                <!-- Botón Cascada -->
                <ribbon:RibbonButton Click="ArrangeCascade_Click">
                    <ribbon:RibbonButton.LargeImageSource>
                        <StaticResource ResourceKey="cascade"/>
                    </ribbon:RibbonButton.LargeImageSource>
                    <ribbon:RibbonButton.Label>Cascada</ribbon:RibbonButton.Label>
                </ribbon:RibbonButton>

                <!-- Botón Cuadrícula -->
                <ribbon:RibbonButton Click="ArrangeGrid_Click">
                    <ribbon:RibbonButton.LargeImageSource>
                        <StaticResource ResourceKey="grid"/>
                    </ribbon:RibbonButton.LargeImageSource>
                    <ribbon:RibbonButton.Label>Cuadrícula</ribbon:RibbonButton.Label>
                </ribbon:RibbonButton>
            </ribbon:RibbonGroup>
        </ribbon:RibbonTab>


        <ribbon:RibbonTab Header="Reportes">
            <ribbon:RibbonGroup Header="Filtros">
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <!-- Combobox Frente de Trabajo -->
                    <DockPanel Margin="3,0,10,0" VerticalAlignment="Top">
                        <TextBlock Text="Frente de Trabajo:" 
                                 DockPanel.Dock="Top" 
                                 Margin="0,0,0,2"/>
                        <ComboBox Width="150" Height="26">
                            <ComboBoxItem Content="Frente 1"/>
                            <ComboBoxItem Content="Frente 2"/>
                            <ComboBoxItem Content="Frente 3"/>
                        </ComboBox>
                    </DockPanel>

                    <!-- Fecha Inicial -->
                    <DockPanel Margin="3,0,10,0" VerticalAlignment="Top">
                        <TextBlock Text="Fecha Inicial:" 
                                 DockPanel.Dock="Top" 
                                 Margin="0,0,0,2"/>
                        <DatePicker Width="120" Height="26" SelectedDate="{Binding ReportFilterDTO.Date}"/>
                    </DockPanel>

                    <!-- Fecha Final -->
                    <DockPanel Margin="3,0,10,0" VerticalAlignment="Top">
                        <TextBlock Text="Fecha Final:" 
                                 DockPanel.Dock="Top" 
                                 Margin="0,0,0,2"/>
                        <DatePicker Width="120" Height="26"/>
                    </DockPanel>

                    <ribbon:RibbonButton Width="28" Height="28" BorderBrush="Gray" Margin="0,5,5,4" Padding="3">
                        <ribbon:RibbonButton.SmallImageSource>
                            <StaticResource ResourceKey="refresh"/>
                        </ribbon:RibbonButton.SmallImageSource>
                    </ribbon:RibbonButton>

                    <StackPanel Orientation="Horizontal" Height="60">
                        <ToggleButton x:Name="PopupButton" BorderThickness="0.8"
                                      Background="#FFF6F6F6"
                                        Width="15" 
                                        Height="15"
                                        Padding="3" VerticalAlignment="Bottom">
                            <Image Source="{StaticResource drop-down}"/>
                        </ToggleButton>

                        <Popup IsOpen="{Binding IsChecked, ElementName=PopupButton}" 
                                PlacementTarget="{Binding ElementName=PopupButton}" 
                                Placement="Bottom" 
                                StaysOpen="False">
                            <Border Background="White" 
                                BorderBrush="Gray" 
                                BorderThickness="1" 
                                Padding="5">
                                <StackPanel>
                                    <Button Height="30" Margin="2" HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
                                            <Image Source="{StaticResource delete-filter}" Width="20" Height="20"/>
                                            <TextBlock Text="Borrar filtros" Margin="5,0,5,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </StackPanel>
                </StackPanel>


            </ribbon:RibbonGroup>
        </ribbon:RibbonTab>
    </ribbon:Ribbon>
</UserControl>